<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/zhuye"
        >
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_all_book"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sousuotu"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:hint="请输入书名或作者"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="搜 索"
            android:id="@+id/sousuo_all_book"
            android:layout_marginLeft="20dp"
            >

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="480dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="480dp"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:background="#DCDCDC"
            >
            <Button
                android:id="@+id/history_all_book"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="历史"
                android:textSize="20dp"
                >

            </Button>
            <Button
                android:id="@+id/xuanhuan_all_book"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="玄幻"
                android:textSize="20dp"
                >

            </Button>

        </LinearLayout>
        <ListView
            android:id="@+id/listview_all_book"
            android:layout_height="480dp"
            android:layout_width="305dp"
            ></ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/shujia_allbook"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shujia"
            android:text="书架">

        </ImageButton>

        <ImageButton
            android:id="@+id/quanbufenlei_allbook"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:src="@drawable/fenlei"
            android:text="全部分类">

        </ImageButton>

        <ImageButton
            android:id="@+id/wode_allbook"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:src="@drawable/wode"
            android:text="我的">

        </ImageButton>
    </LinearLayout>

</LinearLayout>