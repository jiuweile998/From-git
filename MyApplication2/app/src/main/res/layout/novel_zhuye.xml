<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yidianlistitem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/fanhui_novel_zhu_ye"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/fanhui"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgView_novel_zhuye"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            tools:layout_marginLeft="5dp" />

          <LinearLayout
              android:layout_width="200dp"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              >
              <TextView
                  android:id="@+id/author_novel_zhye"
                  android:layout_width="fill_parent"
                  android:layout_height="115dp"
                  android:textIsSelectable="false"
                  android:textSize="18sp" />
              <TextView
                  android:id="@+id/dec_novel_zhye"
                  android:layout_width="fill_parent"
                  android:layout_height="115dp"
                  android:textIsSelectable="false"
                  android:textSize="18sp" />

          </LinearLayout>

    </LinearLayout>
   <LinearLayout
       android:layout_marginTop="270dp"
       android:layout_width="300dp"
       android:layout_height="50dp"
       android:layout_gravity="center"
       >
       <Button
           android:id="@+id/delet_novel_zhu_ye"
           android:layout_height="fill_parent"
           android:layout_width="100dp"
           android:text="删除"
           android:textSize="30dp"
           />
       <Button
           android:id="@+id/yuedu_novel_zhu_ye"
           android:layout_height="fill_parent"
           android:layout_width="200dp"
           android:text="开始阅读"
           android:textSize="30dp"
           />

   </LinearLayout>



</LinearLayout>